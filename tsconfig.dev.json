{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}