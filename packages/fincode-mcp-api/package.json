{
  "name": "@fincode/mcp-api",
  "version": "1.0.0",
  "description": "MCP server for fincode payment API integration",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "fincode-mcp-api": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc",
    "build:prd": "tsc -p tsconfig.prd.json",
    "build:bundle": "node esbuild.config.js",
    "build:bundle:prd": "cross-env NODE_ENV=production node esbuild.config.js",
    "build:watch": "tsc -b --watch --preserveWatchOutput",
    "build:dxt": "dxt pack",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "fix": "biome check --write .",
    "reset": "pnpm run clean && rm -rf node_modules && rm -rf *.dxt"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "@fincode/mcp-core": "workspace:*",
    "@fincode/node": "1.1.0",
    "@modelcontextprotocol/sdk": "1.13.0",
    "openapi-types": "12.1.3",
    "yamljs": "0.3.0",
    "zod": "3.25.67",
    "zod-to-json-schema": "3.24.5"
  },
  "devDependencies": {
    "@types/yamljs": "0.2.34",
    "esbuild": "^0.25.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digirise-inc/fincode-mcp-core.git",
    "directory": "packages/fincode-mcp-api"
  },
  "keywords": [
    "fincode",
    "mcp",
    "model-context-protocol",
    "api",
    "payment"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digirise-inc/fincode-mcp-core/issues"
  },
  "homepage": "https://github.com/digirise-inc/fincode-mcp-core/tree/main/packages/fincode-mcp-api#readme"
}
