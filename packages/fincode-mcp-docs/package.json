{
  "name": "@fincode/mcp-docs",
  "version": "1.0.0",
  "description": "MCP server for fincode documentation access",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "fincode-mcp-docs": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc",
    "build:prd": "tsc -p tsconfig.prd.json",
    "build:bundle": "node esbuild.config.js && cp fincode-openapi.yml dist",
    "build:bundle:prd": "NODE_ENV=production node esbuild.config.js && cp fincode-openapi.yml dist",
    "build:bundle:watch": "esbuild src/index.ts --bundle --platform=node --target=es2022 --format=esm --outfile=dist/index.bundled.js --watch",
    "build:watch": "tsc -b --watch",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "dev:build": "tsc --watch",
    "start": "node --no-deprecation dist/index.js",
    "start:bundled": "node --no-deprecation dist/index.bundled.js",
    "start:watch": "node --no-deprecation --watch dist/index.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "fix": "biome check --write .",
    "reset": "pnpm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "@fincode/mcp-core": "^1.0.0",
    "@fincode/node": "1.1.0",
    "@modelcontextprotocol/sdk": "1.13.0",
    "openapi-types": "12.1.3",
    "yamljs": "0.3.0",
    "zod": "3.25.67",
    "zod-to-json-schema": "3.24.5"
  },
  "devDependencies": {
    "@types/yamljs": "0.2.34",
    "esbuild": "^0.25.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digirise-inc/fincode-mcp-core.git",
    "directory": "packages/fincode-mcp-docs"
  },
  "keywords": [
    "fincode",
    "mcp",
    "model-context-protocol",
    "documentation",
    "docs"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digirise-inc/fincode-mcp-core/issues"
  },
  "homepage": "https://github.com/digirise-inc/fincode-mcp-core/tree/main/packages/fincode-mcp-docs#readme"
}
