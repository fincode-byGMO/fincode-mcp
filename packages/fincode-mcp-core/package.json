{
  "name": "@fincode/mcp-core",
  "version": "1.0.0",
  "description": "Core utilities and types for fincode MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc",
    "build:prd": "tsc -p tsconfig.prd.json",
    "build:watch": "tsc -b --watch",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "dev:build": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "fix": "biome check --write .",
    "reset": "pnpm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "@fincode/node": "1.1.0",
    "@modelcontextprotocol/sdk": "1.13.0",
    "openapi-types": "12.1.3",
    "yamljs": "0.3.0",
    "zod": "3.25.67",
    "zod-to-json-schema": "3.24.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digirise-inc/fincode-mcp-core.git",
    "directory": "packages/fincode-mcp-core"
  },
  "keywords": [
    "fincode",
    "mcp",
    "model-context-protocol",
    "core",
    "utilities"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digirise-inc/fincode-mcp-core/issues"
  },
  "homepage": "https://github.com/digirise-inc/fincode-mcp-core/tree/main/packages/fincode-mcp-core#readme",
  "devDependencies": {
    "@types/yamljs": "^0.2.34"
  }
}
